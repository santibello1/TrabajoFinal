<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="editarResenia">
        <form action="/misresenias/editar/<%=resultado.id %>" method="POST">
            <h1>Editar Resenia</h1>

            <div>
                <input type="text" name="email" id="email" placeholder="email">
            </div>
            <div>
                <input type="password" id="password" name="password" placeholder="password">
            </div>
            <div>
                <label for="resenia">Resenia</label>
                <textarea name="resenia" id="resenia" cols="30" rows="5">
                    <%= resultado.texto_resenia%>
                </textarea>
            </div>
            <div>
                <label for="resenia">Puntaje</label>
                <input type="range" id="puntaje" min="0" max="5" onchange="updateValue(this.value)" value="<%=resultado.puntaje_pelicula%>">
                <p id="valorRange"> <%= resultado.puntaje_pelicula%> </p>
            </div>

            <button type="submit" class="editarResenia" name="button">Enviar</button>

        </form>
    </div>
    <%- include('./partials/footer')%>

  

</body>
</html>

<script type="text/javascript" src="/routes/misresenias.js"></script>